<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    tools:context=".InfoActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="407dp"
        android:layout_height="64dp"
        android:background="@color/colorPrimary"
        android:text="Home"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnReset2"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnSetTarget2"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:text="Set Target"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.928"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBMR2"
        app:layout_constraintVertical_bias="0.196" />

    <Button
        android:id="@+id/btnReset2"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:text="Reset"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.467"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBMR2"
        app:layout_constraintVertical_bias="0.196" />

    <Button
        android:id="@+id/btnCalculate2"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:text="Calculate"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.008"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBMR2"
        app:layout_constraintVertical_bias="0.196" />

    <TextView
        android:id="@+id/txtBMR2"
        android:layout_width="360dp"
        android:layout_height="116dp"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:textAlignment="viewStart"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup3"
        app:layout_constraintVertical_bias="0.064" />

    <TextView
        android:id="@+id/txtLogo2"
        android:layout_width="390dp"
        android:layout_height="58dp"
        android:background="@color/colorPrimary"
        android:text="GetFit"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.009" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calorie Intake Calculator"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLogo2"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/etBage"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:hint="Age"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etBweight"
        app:layout_constraintVertical_bias="0.022" />

    <EditText
        android:id="@+id/etBweight"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:hint="Weight"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etBheight"
        app:layout_constraintVertical_bias="0.02" />

    <EditText
        android:id="@+id/etBheight"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:hint="Height"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.0" />

    <RadioGroup
        android:id="@+id/radioGroup3"
        android:layout_width="362dp"
        android:layout_height="154dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etBage"
        app:layout_constraintVertical_bias="0.024">

        <RadioButton
            android:id="@+id/rdNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No exercise" />

        <RadioButton
            android:id="@+id/rdLittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Little exercise" />

        <RadioButton
            android:id="@+id/rdSeven"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6-7 times a week" />

        <RadioButton
            android:id="@+id/rdVery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Very active" />

        <RadioButton
            android:id="@+id/rdFive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3-5 times a week" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>