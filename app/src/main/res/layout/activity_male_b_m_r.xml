<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    android:orientation="horizontal"
    tools:context=".maleBMR">

    <Button
        android:id="@+id/btnSetTarget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="Set Target"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.872"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBMR"
        app:layout_constraintVertical_bias="0.106" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="Reset"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBMR"
        app:layout_constraintVertical_bias="0.106" />

    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="Calculate"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBMR"
        app:layout_constraintVertical_bias="0.106" />

    <EditText
        android:id="@+id/etBheight2"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:hint="Height"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.013" />

    <EditText
        android:id="@+id/etBage2"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:hint="Age"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etBweight2"
        app:layout_constraintVertical_bias="0.008" />

    <EditText
        android:id="@+id/etBweight2"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:hint="Weight"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etBheight2"
        app:layout_constraintVertical_bias="0.015" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calorie Intake Calculator"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLogo5"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtLogo5"
        android:layout_width="466dp"
        android:layout_height="71dp"
        android:background="@color/colorPrimary"
        android:text="GetFit"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="403dp"
        android:layout_height="169dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etBage2"
        app:layout_constraintVertical_bias="0.0">

        <RadioButton
            android:id="@+id/rdNo"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="No Exercise" />

        <RadioButton
            android:id="@+id/rdLittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Very Little" />

        <RadioButton
            android:id="@+id/rdThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3-5 times a week" />

        <RadioButton
            android:id="@+id/rdSix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6-7 times a week" />

        <RadioButton
            android:id="@+id/rdActive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Very Active (Athlete)" />
    </RadioGroup>

    <TextView
        android:id="@+id/txtBMR"
        android:layout_width="325dp"
        android:layout_height="137dp"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:textAlignment="viewStart"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button9"
        android:layout_width="413dp"
        android:layout_height="59dp"
        android:layout_marginTop="4dp"
        android:background="@color/colorPrimary"
        android:text="Home"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnReset"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>